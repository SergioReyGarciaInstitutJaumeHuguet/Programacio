<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="edificis">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="ciutat" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="nom" type="xs:string" />
                            <xs:element name="carrer" type="xs:string"/>
                            <xs:element name="Oficines" type="descOficina"/>
                            <xs:element name="habitatge" type="descHabitatge" minOccurs="0"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:complexType name="descOficina">
        <xs:sequence>
            <xs:element name="num" type="xs:integer" />
            <xs:element name="Planta" maxOccurs="unbounded">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="num" type="xs:integer" />
                        <xs:element name="oficina" type="xs:string" maxOccurs="unbounded"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="descHabitatge">
        <xs:sequence>
            <xs:element name="num" type="xs:integer" />
            <xs:element name="botiga" minOccurs="0" />
            <xs:element name="Planta" maxOccurs="unbounded">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="pis" type="xs:string" maxOccurs="unbounded"/>
                            <xs:complexType>
                                <xs:sequence>
                                    <xs:element name="terrasa" type="xs:string" minOccurs="0"/>
                                </xs:sequence>
                            </xs:complexType>
                    </xs:sequence>
                    <xs:attribute name="num" type="xs:string" use="required" />
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
</xs:schema>